import random
print("Lets go gambling")

money = 50000

M = input("want to play:")

if M == "yes":

    guessed = False
    while not guessed:
        if money <= 0:
            N = input("would you like to take out a loan against your house")
            if N == "yes":
                print("alright here you go")
                money += 30000
                print(money)
            if N == "no":
                print("I bet your wife wont be happy")
                guessed = True
        E = rand_num = random.randint(1, 5)
        print(E)
        Q = int(input("number 1 through 5:"))
        if E == Q:
            print("I cant stop winning")
            money += 5000
            print(money)
            R = rand_num = random.randint(1, 4)
            print(R)
            Q = int(input("number 1 through 4:"))
            if R == Q:
                print("I cant stop winning")
                money += 5000
                print(money)
                T = rand_num = random.randint(1, 3)
                print(T)
                Q = int(input("number 1 through 3:"))
                guessed = False
                while not guessed:
                    if money <= 0:
                        N = input("would you like to take out a loan against your house")
                        if N == "yes":
                            print("alright here you go")
                            money += 30000
                            print(money)
                        if N == "no":
                            print("I bet your wife wont be happy")
                            guessed = True
                    if T == Q:
                        print("I cant stop winning")
                        money += 5000
                        print(money)
                        T = rand_num = random.randint(1, 2)
                        print(T)
                        Q = int(input("number 1 through 2:"))
                    else:
                        print("aw dang it")
                        money -= int(5000)
                        print(money)
                        break
            else:
                print("aw dang it")
                money -= int(5000)
                print(money)
        else:
            print("aw dang it")
